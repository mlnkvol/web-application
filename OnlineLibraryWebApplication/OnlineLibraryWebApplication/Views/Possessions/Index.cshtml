@if (Model.Count() == 0)
{
    <p>Авторизуйтесь на сайті, щоб користуватися бібліотекою.</p>
}
else
{
    <div class="row">
        @foreach (var possession in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    @if (possession.Book.Image != null)
                    {
                        <img src="@Url.Content($"~/pictures/{possession.Book.Image}")" class="card-img-top" alt="Зображення книги">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@possession.Book.Title</h5>
                        <a href="@Url.Action("Details", "Books", new { id = possession.BookId })" class="btn btn-primary">Читати далі</a>
                    </div>
                </div>
            </div>
        }
    </div>
}