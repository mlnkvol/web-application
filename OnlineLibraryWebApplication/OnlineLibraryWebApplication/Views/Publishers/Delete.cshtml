@model OnlineLibraryWebApplication.Models.Publisher

@{
    ViewData["Title"] = "Видалити видавництво";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що бажаєте видалити це видавництво?</h3>
<div>
    <h4>Інформація про видавництво</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublisherName)
        </dd>
    </dl>
    
    <form asp-action="Delete" onsubmit="return confirm('Чи точно ви бажаєте видалити це видавництво?')">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-controller="Publishers" asp-action="Index">Повернутися до списку</a>
    </form>
</div>
